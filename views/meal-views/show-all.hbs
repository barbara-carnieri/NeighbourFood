<div class="container-fluid">
  <h1>ALL THE EVENTS</h1>
  <h2>See all the events in your neighbourhood: {{userInfo.address.zipcode}}</h2>

  <div>
  {{#if allMealEventsFromDB}}
    {{#each allMealEventsFromDB}}
    <div class="event-preview">
      <img src="{{ this.eventImg }}" alt="Event image">
      <h3><a href="/meal-events/{{ this._id }}">{{ this.eventName }}</a></h3>
      <p>Cuisine: {{ this.cuisine }}</p>
      <a href="/meal-events/{{ this._id }}"><button>Check out this event</button></a>
    </div>
    {{/each}}
  {{else}}
    <p>Ooops! No meal events has been found in your neighbourhood! </p>
    <p>Will you be the first one? </p>
  {{/if}}
  </div>

  <div>
    <a href="/meal-events/create">Create a new event</a>
  </div>
</div>
