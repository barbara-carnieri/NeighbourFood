
<div class="container-fluid">
  <h1>{{ mealEvent.eventName }}</h1>
  <div class="event-container">
    <img src="{{ mealEvent.eventImg }}" alt="Event image">
    
    <div>
      <p> EventName: {{ mealEvent.eventName }}</p>
      <p> Date: {{ mealEvent.sdate }}</p>
      {{#ifeqId mealEvent.host userInfo._id }}
        <p>Host: you are the host of this event</p>
      {{else}}
        <p> Host: <a href="/profile/{{ mealEvent.host }}">{{hostInfo.name}}</a></p>
      {{/ifeqId}}
      <p> Cuisine: {{ mealEvent.cuisine }} </p>
      <p> Number of guests: {{ mealEvent.numberAttend }}</p>
    </div>

    <div>
      <p> Dish: {{ mealEvent.dish }}</p>
      <p> Description: {{ mealEvent.eventDescription }}</p>
    </div>
  <div>

  <div>
    {{!-- if current user is the host of this event --}}
    {{#ifeqId mealEvent.host userInfo._id }}
      
      <button><a href="/meal-events/{{mealEvent._id}}/edit">Edit this event</a></button>
      <button><a href="/meal-events/{{mealEvent._id}}/delete">Delete this event</a></button>
    {{else}}
      {{!-- if current user is not the host but is a guest of this event --}}
      {{#ifinc mealEvent.guest userInfo._id}}
        <p>You attend this event</p>
        <form action="/meal-events/{{mealEvent._id}}/cancel" method="POST">
          <button type="submit">Cancel attendance</button>
        </form>
      {{!-- if current user is not a guest of this event either --}}
      {{else}}
        <form action="/meal-events/{{mealEvent._id}}/attend" method="POST">
          <button type="submit">Attend</button>
        </form>
      {{/ifinc}}
    {{/ifeqId}}
  </div>

  <div>
    <p><a href="/profile/{{userInfo._id}}">Back to your profile</a></p>
    <p><a href="/meal-events">Back to the list of events</a></p>
  </div>
</div>
