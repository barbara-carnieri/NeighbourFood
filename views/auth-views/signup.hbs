<div class="container-fluid">
  <div id="form-container">

    <h1>Signup</h1>

    <form action='/auth/signup' method='POST' enctype="multipart/form-data">
      <label for=''>Full name</label>
      <input type='text' name='name' required>
      <br>
      <label for=''>Email</label>
      <input type='email' name='email' required>
      <br>
      <label for=''>Password</label>
      <input type='password' name='password' required>
      <br>
      <label for=''>Address</label>
      <input type='text' name='street' required>
      <input type='number' name='houseNumber' required>
      <input type='number' name='zipcode' required>
      <input type='text' name='city' required>
      <br>
      <label for=''>Description</label>
      <input type='textarea' name='description' required>
      <br>
      <label for='profileImg'>Image</label>
      <input type='file' name='profileImg' id="profileImg" required>
      <br>
      <button type='submit'>Create account</button>
      <br>
      <p class="account-message">
          Already have an account? <a href="/login">Login</a>
      </p>
    </form>

    {{!-- error message display --}}
    {{#if errorMessage}}
      <div class="error-message">{{ errorMessage }}</div>
    {{/if}}

  </div>
</div>