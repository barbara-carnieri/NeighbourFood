<div class="container-fluid">
  <h1>EDIT YOUR PROFILE</h1>
  
  <form action='/profile/{{oneUser._id}}/edit' method='POST' enctype="multipart/form-data">
    <div class="form-group">
    <label for=''>Name</label>
    <input class="form-control" type='text' name='name' value='{{oneUser.name}}'>
    </div>
    <div class="form-group">
    <label for=''>Email</label>
    <input class="form-control" type='email' name='email'  value='{{oneUser.email}}'>
    </div>
    <div class="form-group">
    <label for=''>Password</label>
    <input class="form-control" type='password' name='password' value='{{oneUser.password}}'>
    </div>
    <div class="form-group">
    <label for=''>Address</label>
    <input class="form-control" type='text' name='street' value='{{oneUser.address.street}}'>
    <input class="form-control" type='number' name='houseNumber' value='{{oneUser.address.houseNumber}}'>
    <input class="form-control" type='number' name='zipcode' value='{{oneUser.address.zipcode}}'>
    <input class="form-control" type='text' name='city' value='{{oneUser.address.city}}'>
    </div>
    <div class="form-group">
    <label for=''>About me</label>
    <input class="form-control" type='textarea' name='description' value='{{oneUser.description}}'>
    </div>
    <div class="form-group">
    <label for='profileImg'>Image</label>
    <img class="card-img-top" src="{{oneUser.profileImg}}" alt="profileImg">
    <input class="form-control" type='file' name='profileImg' value='{{oneUser.profileImg}}'>
    </div>
    <button class="btn btn-primary" type='submit'>Save changes</button>
  </form>
</div>