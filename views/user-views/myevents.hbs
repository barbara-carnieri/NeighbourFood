<div class="container-fluid">
  <h1>MY EVENTS</h1>

  <h2>EVENTS I HOST</h2>
  <ul>
  {{#if mealEventHost}}
    {{#each mealEventHost}}
      <li><a href="/meal-events/{{this._id}}">{{this.eventName}}</a></li>
    {{/each}}
  {{else}}
    <p>You don't host any event yet</p>
    <p><a href="/meal-events/create">Create a new event</a></p>
  {{/if}}
  </ul>

  <h2>EVENTS I ATTEND</h2>
  <ul>
  {{#if mealEventGuest}}
    {{#each mealEventGuest}}
      <li><a href="/meal-events/{{this._id}}">{{this.eventName}}</a></li>
    {{/each}}
  {{else}}
    <p>You don't attend any event yet</p>
    <p><a href="/meal-events">See the list of events</a></p>
  {{/if}}
  </ul>
</div>